procedure SimpleLoop();



implementation SimpleLoop()
{
  var i: int;

  start:
    assume {:inferred} true;
    i := 0;
    assume {:inferred} i == 0;
    goto test;

  test:  // cut point
    assume {:inferred} 0 <= i && i < 11;
    assume {:inferred} 0 <= i && i < 11;
    goto Then, Else;

  Then:
    assume {:inferred} 0 <= i && i < 11;
    assume i < 10;
    i := i + 1;
    assume {:inferred} 1 <= i && i < 11;
    goto test;

  Else:
    assume {:inferred} 0 <= i && i < 11;
    assume !(i < 10);
    assume {:inferred} 0 <= i && i < 11;
    return;
}



procedure VariableBoundLoop(n: int);



implementation VariableBoundLoop(n: int)
{
  var i: int;

  start:
    assume {:inferred} true;
    i := 0;
    assume {:inferred} i == 0;
    goto test;

  test:  // cut point
    assume {:inferred} 0 <= i;
    assume {:inferred} 0 <= i;
    goto Then, Else;

  Then:
    assume {:inferred} 0 <= i;
    assume i < n;
    i := i + 1;
    assume {:inferred} 1 <= i && 1 <= n;
    goto test;

  Else:
    assume {:inferred} 0 <= i;
    assume !(i < n);
    assume {:inferred} 0 <= i;
    return;
}



